{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "rules" :{
    "no-plusplus": 0, // it is an antipattern, but allow only for for-loops
    "no-param-reassign": 0,
    "no-alert": 0,
    "no-console": 0, // alerts and consoles allowe during dev.
    "import/no-extraneous-dependencies": 0,  // webpack handles dependencies
    "import/extensions": 0,
    "import/no-unresolved": 0
  }
}